<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/layout_item_bg"
    android:padding="@dimen/space_8">

    <net.oschina.app.widget.AvatarView
        android:id="@+id/iv_avatar"
        style="@style/user_face_image"
        android:layout_marginRight="@dimen/space_8"
        android:layout_marginTop="@dimen/space_3" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_2"
        android:layout_toRightOf="@id/iv_avatar"
        tools:text="火蚁"
        android:textColor="?android:textColorLink"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/main_gray"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:id="@+id/ly_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/iv_avatar"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_10"
            android:textColor="?attr/infoTextColor"
            android:textSize="@dimen/text_size_12"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_action_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_gray"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>

    <net.oschina.app.widget.TweetTextView
        android:id="@+id/tv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_action"
        android:layout_marginBottom="@dimen/space_4"
        android:layout_marginTop="@dimen/space_4"
        android:layout_toRightOf="@id/iv_avatar"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="?attr/textColor"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:id="@+id/ly_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_body"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:background="?attr/comment_reply_container_bg"
        android:visibility="visible" >

        <net.oschina.app.widget.TweetTextView
            android:id="@+id/tv_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:padding="@dimen/space_4"
            tools:text="内容"
            android:textColor="?attr/textColor"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_reply"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/space_4"
        android:layout_toRightOf="@id/iv_avatar"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="#cfcfcf"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pic"
        android:layout_marginBottom="@dimen/space_4"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_from"
            android:layout_alignParentLeft="true"
            style="@style/list_text_info" />

        <LinearLayout
            android:id="@+id/ll_comments"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <IconTextView
                style="@style/list_text_info"
                android:text="{fa-comments-o} " />

            <TextView
                android:id="@+id/tv_comment_count"
                style="@style/list_text_info" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
