<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_word_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="15dp">

    <!--android:background="?attr/selectableItemBackgroundBorderless"-->

    <Button
        android:id="@+id/item_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:padding="6dp"
        android:textSize="12dp"
        android:text="删除"/>

    <TextView
        android:id="@+id/tv_item_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/item_button_delete"
        android:includeFontPadding="false"
        tools:text="fuck"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/tv_item_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:includeFontPadding="false"
        tools:text="result"
        android:padding="5dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:layout_below="@+id/tv_item_src"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_item_src"
        android:layout_alignEnd="@+id/tv_item_src" />


</RelativeLayout>